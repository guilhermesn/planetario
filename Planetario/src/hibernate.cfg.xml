<?xml version="1.0" encoding="UTF-8" standalone="no"?><hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Planetario?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="planetario/Estrelas.hbm.xml"/>
    <mapping resource="planetario/Planeta.hbm.xml"/>
  </session-factory>
</hibernate-configuration>